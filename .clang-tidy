Checks: >
  clang-analyzer-*,                     # Enable all static analysis checks
  cppcoreguidelines-*,                  # C++ Core Guidelines
  modernize-*,                          # Suggest modern C++ practices (C++11/14/17/20)
  performance-*,                        # Performance suggestions
  readability-*,                        # Improve readability
  bugprone-*,                           # Catch likely bugs
  misc-*,                               # Miscellaneous checks
  portability-*,                        # Portability issues
  -clang-analyzer-alpha.*,              # Disable alpha (experimental) checks
  -modernize-use-trailing-return-type,  # Too pedantic for most projects
  -readability-magic-numbers,           # Can be noisy, disable if not useful
  -readability-implicit-bool-conversion # Often too strict
WarningsAsErrors: '*'
HeaderFilterRegex: '.*'
AnalyzeTemporaryDtors: true
FormatStyle: file
CheckOptions:
  - key:             modernize-use-nullptr.NullMacros
    value:           'NULL'
  - key:             readability-function-cognitive-complexity.Threshold
    value:           '25'
  - key:             cppcoreguidelines-avoid-magic-numbers.IgnoredValues
    value:           '0,1,2,-1'
  - key:             modernize-loop-convert.MinConfidence
    value:           reasonable
  - key:             cppcoreguidelines-pro-type-member-init.HabilitateClassesWithNoDefaultConstructor
    value:           true